exec xset -dpms s off
exec unclutter
exec redshift -l 40.6:22.9 -t 6500:3000
exec --no-startup-id dunst
exec_always hsetroot -solid "#222222"
exec picom -f
exec xrdb ~/.Xresources
exec_always ~/.dotfiles/scripts/launch_polybar.sh
